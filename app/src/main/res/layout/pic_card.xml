<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/card_margin"
    android:elevation="@dimen/elevation"
    card_view:cardCornerRadius="@dimen/card_album_radius"
    android:id="@+id/single_pic">

    <!-- We add LinearLayout as CardView can have only one elem. inside -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ImageSwitcher with infos about pic??? -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/album_cover_height"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitXY"
            android:id="@+id/picture" />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/picture"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingRight="@dimen/album_title_padding"
            android:paddingTop="@dimen/album_title_padding"
            android:textColor="#616161"
            android:background="#E0E0E0"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/album_title"
            android:id="@+id/card_view_des"
            android:text="@string/error_reading" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_view_text1"
            android:layout_below="@id/card_view_des"
            android:textColor="#616161"
            android:fontFamily="casual"
            android:background="#E0E0E0"
            android:typeface="serif"
            android:paddingBottom="@dimen/songs_count_padding_bottom"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingRight="@dimen/album_title_padding"
            android:textSize="@dimen/songs_count"
            android:text="@string/some_long_sample_text"/>


        <ImageView
            android:layout_width="@dimen/ic_album_overflow_width"
            android:layout_height="@dimen/ic_album_overflow_height"
            android:id="@+id/picture_dots"
            android:layout_alignParentRight="true"
            android:layout_below="@id/picture"
            android:layout_marginTop="@dimen/ic_album_overflow_margin_top"
            android:scaleType="centerCrop"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_dots"/>
    </RelativeLayout>
    <!-- This initially-hidden ImageView will hold the expanded/zoomed version of
             the image.-->
    <ImageView
        android:id="@+id/expanded_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />


</android.support.v7.widget.CardView>